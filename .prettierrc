{
  "semi": false,
  "trailingComma": "none",
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "ignore",
  "bracketSpacing": true,
  "printWidth": 100,
  "proseWrap": "preserve",
  "arrowParens": "avoid",
  "useTabs": false,
  "vueIndentScriptAndStyle": true,
  "singleAttributePerLine": true,
  "endOfLine": "auto",
  "bracketSameLine": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": [
        "*.md",
        "*.mdc"
      ],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "parser": "vue",
        "vueIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": [
        "*.d.ts"
      ],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}