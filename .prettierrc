{
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "always",
  "useTabs": false,
  "vueIndentScriptAndStyle": true,
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": [
        "*.md",
        "*.mdc"
      ],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "parser": "vue"
      }
    }
  ]
}