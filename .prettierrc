{
  "semi": false,
  "trailingComma": "none",
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 70,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "useTabs": false,
  "vueIndentScriptAndStyle": true,
  "singleAttributePerLine": true,
  "endOfLine": "auto",
  "bracketSameLine": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.md", "*.mdc"],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "parser": "vue",
        "vueIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": ["*.d.ts"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
